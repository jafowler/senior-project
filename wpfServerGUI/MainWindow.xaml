<Window x:Class="wpfServerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfServerGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="systemNameInput" HorizontalAlignment="Left" Height="23" Margin="225,112,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150"/>
        <Label x:Name="sysNameLabel" Content="System Name" HorizontalAlignment="Left" Margin="137,109,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="portInput" HorizontalAlignment="Left" Height="23" Margin="225,142,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150"/>
        <Label x:Name="portLabel" Content="Port" HorizontalAlignment="Left" Margin="182,139,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Apply" HorizontalAlignment="Left" Margin="432,289,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
